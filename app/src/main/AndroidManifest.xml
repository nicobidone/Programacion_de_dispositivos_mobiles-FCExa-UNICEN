<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.nicob.entregafinal">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ejercicio1.Ejercicio1Activity" />
        <activity
            android:name=".ejercicio2.Ejercicio2Activity"
            android:configChanges="orientation|screenSize" />
        <activity android:name=".ejercicio2.Ejercicio2SecondaryActivity" />
        <activity android:name=".ejercicio3.Ejercicio3Activity" />
        <activity android:name=".ejercicio4.Ejercicio4Activity" />

        <service
            android:name=".ejercicio4.Ejercicio4MyIntentService"
            android:exported="false" />
        <service
            android:name=".ejercicio4.Ejercicio4MyService"
            android:enabled="true"
            android:exported="true" />
        <service
            android:name=".ejercicio4.Ejercicio5MessengerService"
            android:enabled="true"
            android:exported="true"></service>
    </application>

</manifest>